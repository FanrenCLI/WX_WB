.center_table {
  padding: 10rpx 20rpx 15rpx 20rpx;
  margin: 0 0 10rpx 0;
  background-color: #fff;
  display: flex;
  flex-flow: row wrap;
}

.center_td {
  width: 25%;
  padding: 15rpx 0 15rpx 0;
}

.td_img {
  text-align: center;
}

.imgs_ico {
  width: 88rpx;
  height: 88rpx;
}

.td_text {
  text-align: center;
  color: #333;
  font-size: 28rpx;
}

.img_ins {
  width: 100%;
  height: 100%;
}



.func-area {
	display: flex;
	flex-direction: row;
	padding-top: 15rpx;
  background: white;
}

.func-area view {
	width: 50%;
  text-align: center;
  margin-bottom: 10rpx;
}

.func-area text{
	display: block;
	color: #333;
	font-size: 30rpx;
	line-height: 30rpx;
}

.func-area image {
	width: 250rpx;
	height: 250rpx;
	border-radius: 20rpx;
}

