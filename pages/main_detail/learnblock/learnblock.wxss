page{ 
    display: flex; 
    flex-direction: column; 
    background-color: #6e6e6e1f
  } 
  image{
      width: 100%;
      height: 3000rpx;
  }
  .navbar{ 
    flex: none; 
    display: flex; 
    background: #fff; 
    margin-bottom:10rpx;
  } 
  .navbar .item{ 
    position: relative; 
    flex: auto; 
    text-align: center; 
    line-height: 80rpx; 
    font-size:14px;
  } 
  
  /* 顶部导航字体颜色 */
  .navbar .item.active{ 
    color: #f0145a; 
  } 
  /* 顶部指示条属性 */
  .navbar .item.active:after{ 
    content: ""; 
    display: block; 
    position: absolute; 
    bottom: 0; 
    left: 0; 
    right: 0; 
    height: 6rpx; 
    background: #e73535; 
  }
  

  .mainbody{
      border: 1rpx solid lightgray;
      border-bottom: none;
      background-color: #fff;
      display: flex;
      width: 100%;
      padding:15rpx 0;
  }
  .left-content{
      width:60%;
      display: flex;
      flex-direction: column;
      padding-left: 20rpx;
  }
  .title{
    margin-top: 10rpx;
    font-size: 35rpx;
    margin-bottom: 50rpx;
  }
  .tip{
    font-size: 25rpx;
    color:rgba(99, 99, 99, 0.76)
  }
  .right-content{
      width:40%;
      align-items: center;
      display: flex;
      justify-content: center;
  }
  .right-content image{
      height:150rpx;
      width:80%;
      border-radius: 10rpx;
  }