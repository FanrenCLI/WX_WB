.upl {
    margin-top: 20rpx;
    height: 90rpx;
    width: 100%;
    background: rgba(255, 255, 255, 0.589);
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    padding: 0 40rpx 0 40rpx;
    flex-direction: column;
