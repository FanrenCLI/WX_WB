/* pages/usercenter/usercenter.wxss */
.userinfo {  
    position: relative;  
    width: 750rpx;  
    height: 320rpx;  
    color: #999999;  
    display: flex;  
    flex-direction: column;  
    align-items: center;  
  }  
    
  .userinfo-avatar {  
    overflow:hidden;  
    display: block;  
    width: 160rpx;  
    height: 160rpx;  
    margin: 20rpx;  
    margin-top: 50rpx;  
    border-radius: 50%;  
    border: 2px solid #fff;  
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
  }
  .sign-out-container{
    padding: 50rpx 26rpx 26rpx 26rpx;
  }
  
  .sign-out-btn{
    width: 100%;
    font-size: 34rpx;
  }